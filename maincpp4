#include <iostream>
#include <cmath>     // для sin, cos, sqrt, M_PI
using namespace std;

// ================= ОПИС ФУНКЦІЙ =================

// --- Proc17 ---
// Функція для обчислення площі та периметру трикутника за сторонами і кутом між ними
void TriangleALS(double a, double b, double angle, double &S, double &P)
{
    // Перевірка на коректність даних
    if (a <= 0 || b <= 0) {
        cout << "Помилка! Сторони повинні бути додатними." << endl;
        S = P = 0;
        return;
    }
    if (angle <= 0 || angle >= M_PI) {
        cout << "Помилка! Кут повинен бути в межах (0, π) радіан." << endl;
        S = P = 0;
        return;
    }

    S = 0.5 * a * b * sin(angle);
    P = a + b + sqrt(a * a + b * b - 2 * a * b * cos(angle));
}

void run_Proc17()
{
    cout << "=== Задача Proc17 ===" << endl;
    for (int i = 1; i <= 3; i++)
    {
        cout << "\nТрикутник " << i << ":" << endl;
        double a, b, angle, S, P;
        cout << "Введіть сторону a: "; cin >> a;
        cout << "Введіть сторону b: "; cin >> b;
        cout << "Введіть кут у радіанах: "; cin >> angle;
        TriangleALS(a, b, angle, S, P);
        if (S != 0)
        {
            cout << "Площа S = " << S << endl;
            cout << "Периметр P = " << P << endl;
        }
    }
}

// --- Proc37 ---
// Функція для обчислення периметру прямокутника за координатами протилежних вершин
double RectP(double x1, double y1, double x2, double y2)
{
    if (x1 < -100 || x1 > 100 || y1 < -100 || y1 > 100 ||
        x2 < -100 || x2 > 100 || y2 < -100 || y2 > 100)
    {
        cout << "Помилка! Усі координати повинні бути в межах [-100; 100]." << endl;
        return 0;
    }

    double width = fabs(x2 - x1);
    double height = fabs(y2 - y1);
    return 2 * (width + height);
}

void run_Proc37()
{
    cout << "=== Задача Proc37 ===" << endl;
    cout << "Введіть 10 координат (x1..x5, y1..y5):" << endl;

    double coords[5][2];
    for (int i = 0; i < 5; i++)
    {
        cout << "x" << i + 1 << ": "; cin >> coords[i][0];
        cout << "y" << i + 1 << ": "; cin >> coords[i][1];
    }

    // 3 прямокутники (з 10 координат)
    double perimeters[3];
    perimeters[0] = RectP(coords[0][0], coords[0][1], coords[1][0], coords[1][1]);
    perimeters[1] = RectP(coords[2][0], coords[2][1], coords[3][0], coords[3][1]);
    perimeters[2] = RectP(coords[3][0], coords[3][1], coords[4][0], coords[4][1]);

    for (int i = 0; i < 3; i++)
        if (perimeters[i] != 0)
            cout << "Периметр прямокутника " << i + 1 << " = " << perimeters[i] << endl;
}

// --- Integer35 ---
// 1) Функція введення
int input_hours()
{
    int hours;
    cout << "Введіть кількість годин: ";
    if (!(cin >> hours) || hours < 0)
    {
        cout << "Помилка! Введіть невід’ємне ціле число." << endl;
        return -1;
    }
    return hours;
}

// 2) Функція обчислення
void calc_days_and_hours(int hours, int &days, int &remainder)
{
    days = hours / 24;
    remainder = hours % 24;
}

// 3) Функція виведення
void output_result(int days, int remainder)
{
    cout << "Кількість діб: " << days << ", залишок годин: " << remainder << endl;
}

void run_Integer35()
{
    cout << "=== Задача Integer35 ===" << endl;
    int hours = input_hours();
    if (hours < 0) return;
    int days, remainder;
    calc_days_and_hours(hours, days, remainder);
    output_result(days, remainder);
}

// ==================== ГОЛОВНЕ МЕНЮ ====================

int main()
{
    int choice;
    do
    {
        cout << "\n===== МЕНЮ =====" << endl;
        cout << "1 — Proc17 (трикутник)" << endl;
        cout << "2 — Proc37 (прямокутник)" << endl;
        cout << "3 — Integer35 (години → доби)" << endl;
        cout << "0 — Вихід" << endl;
        cout << "Ваш вибір: ";
        cin >> choice;

        switch (choice)
        {
        case 1:
            run_Proc17();
            break;
        case 2:
            run_Proc37();
            break;
        case 3:
            run_Integer35();
            break;
        case 0:
            cout << "Завершення роботи програми." << endl;
            break;
        default:
            cout << "Невірний вибір. Спробуйте ще раз." << endl;
        }

    } while (choice != 0);

    return 0;
}
